<video autoplay loop muted id="background">
  <source src="../movie/background.mp4" type="video/mp4" />
</video>
<div class="container h-100">
<div class="formtile">
    <div class="col-md-3 formbg">
      <h2>Sign Up</h2>
      <form action="/signup" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="username">Username</label>
          <input
            class="form-control"
            id="username"
            type="text"
            name="username"
            placeholder=""
          />
        </div>

        <div class="form-group">
          <label for="birthdate">Birthdate</label>
          <input
            class="form-control"
            id="birthdate"
            type="date"
            name="birthdate"
          />
        </div>

        <div class="form-group">
          <label>
            About me
            <textarea
              class="form-control"
              name="about"
              rows="4"
              cols="50"
            ></textarea>
          </label>
        </div>

        <div class="form-group">
          <label>Image:
            <input
              class="form-control"
              type="file"
              name="profile-pic"
              class="profile-pic"
            />
          </label>
        </div>

        <div class="form-group">
          <label>
            Password
            <input
              class="form-control"
              type="password"
              name="password"
              placeholder=""
            />
          </label>
        </div>
        <div align="center"><button class="button-main" type="submit"><span>Create an account</span></button></div>
        {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>
</div>